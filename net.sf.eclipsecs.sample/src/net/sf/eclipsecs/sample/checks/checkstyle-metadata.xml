<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE checkstyle-metadata PUBLIC
"-//eclipse-cs//DTD Check Metadata 1.1//EN"
"http://eclipse-cs.sourceforge.net/dtds/checkstyle-metadata_1_1.dtd">
<checkstyle-metadata>
    <rule-group-metadata name="My custom checks"  priority="1600">
        <description>%MyCustomChecks.desc</description>

        <rule-metadata name="%MethodLimit.name" internal-name="MethodLimit" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.MethodLimitCheck" />
            <description>%MethodLimit.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="30">
                <description>The maximum number of allowed methods.</description>
            </property-metadata>
            <quickfix classname="net.sf.eclipsecs.sample.checks.MethodLimitQuickfix" />
        </rule-metadata>
        
        <rule-metadata name="%VariableDeclarations.name" internal-name="VariableDeclarations" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.VariableDeclarationsCheck" />
            <description>%VariableDeclarations.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="0">
                <description>The maximum number of variable declarations.</description>
            </property-metadata>
        </rule-metadata>
        
        <rule-metadata name="LoopingStatements" internal-name="LoopingStatements" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.checks.LoopingStatementsCheck" />
            <description>%VariableDeclarations.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="0">
                <description>The maximum number of looping statements.</description>
            </property-metadata>
        </rule-metadata>
        
        <rule-metadata name="%CastsCheck.name" internal-name="Casts" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.CastsCheck" />
            <description>%CastsCheck.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="0">
                <description>The maximum number of casts.</description>
            </property-metadata>
        </rule-metadata>
        
        <rule-metadata name="%ExpressionsCheck.name" internal-name="Expressions" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.ExpressionsCheck" />
            <description>%ExpressionsCheck.desc</description>
            <property-metadata name="max" datatype="Integer" default-value="0">
                <description>The maximum number of Expressions.</description>
            </property-metadata>
        </rule-metadata>
        
        <rule-metadata name="%HalsteadEffortCheck.name" internal-name="HalsteadEffort" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.HalsteadEffortCheck" />
            <description>%HalsteadEffortCheck.desc</description>
        </rule-metadata>
        
        <rule-metadata name="%MaintainabilityIndexCheck.name" internal-name="MaintainabilityIndex" parent="TreeWalker">
            <alternative-name internal-name="net.sf.eclipsecs.sample.MaintainabilityIndexCheck" />
            <description>%MaintainabilityIndexCheck.desc</description>
        </rule-metadata>
        
    </rule-group-metadata>
</checkstyle-metadata>
